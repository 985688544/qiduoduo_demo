{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution" :"Node",
      "outDir": "../dist",
      "lib": ["dom", "esnext"],
      "noImplicitAny": false,
      "skipLibCheck": true,
      "types": ["vite/client"],
      "removeComments": true,
      "baseUrl": ".",
      "paths": {
        "/@/*": ["src/*"],
        "/#/*": ["types/*"]
      }
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js"]
}